<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>
    <property>
        <name>mapreduce.framework.name</name>
        <value>yarn</value>
    </property>
    <property>
        <name>mapreduce.application.classpath</name>
        <value>$HADOOP_HOME/share/hadoop/mapreduce/*:$HADOOP_HOME/share/hadoop/mapreduce/lib/*</value>
    </property>
    <property>
        <name>yarn.app.mapreduce.am.env</name>
        <value>HADOOP_MAPRED_HOME=/opt/hadoop</value>
    </property>
    <property>
        <name>mapreduce.map.env</name>
        <value>HADOOP_MAPRED_HOME=/opt/hadoop</value>
    </property>
    <property>
        <name>mapreduce.reduce.env</name>
        <value>HADOOP_MAPRED_HOME=/opt/hadoop</value>
    </property>
    <property>
        <name>mapreduce.jobhistory.address</name>
        <value>hadoop-master:10020</value>
    </property>
    <property>
        <name>mapreduce.map.memory.mb</name>
        <value>1024</value>
        <description>1 GB para tarefas Map</description>
    </property>
    <property>
        <name>mapreduce.reduce.memory.mb</name>
        <value>2048</value>
        <description>2 GB para tarefas Reduce</description>
    </property>
    <property>
        <name>mapreduce.map.cpu.vcores</name>
        <value>1</value>
        <description>1 core para tarefas Map</description>
    </property>
    <property>
        <name>mapreduce.reduce.cpu.vcores</name>
        <value>2</value>
        <description>2 cores para tarefas Reduce</description>
    </property>
    
    <!-- Otimizações para performance -->
    <property>
        <name>mapreduce.job.reduces</name>
        <value>4</value>
        <description>Aumenta paralelismo com 4 reducers ao invés do padrão</description>
    </property>
    <property>
        <name>mapreduce.task.io.sort.mb</name>
        <value>256</value>
        <description>Buffer maior para ordenação = mais rápido</description>
    </property>
    <property>
        <name>mapreduce.task.io.sort.factor</name>
        <value>64</value>
        <description>Mais streams simultâneos no merge</description>
    </property>
    <property>
        <name>mapreduce.reduce.shuffle.parallelcopies</name>
        <value>20</value>
        <description>20 threads copiando dados (padrão é 5) = shuffle 4x mais rápido</description>
    </property>
</configuration>
